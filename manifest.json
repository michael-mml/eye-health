{
  "manifest_version": 2,
  "name": "Eye Health",
  "version": "0.0.1",
  "description": "Reminds you to take breaks when using your computer.",
  "homepage_url": "https://gitlab.com/michael-mml/eye-health",
  "icons": {
    "48": "resources/icons/eye.svg"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "resources/icons/eye.svg",
    "default_title": "Eye Health",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "page": "src/background_page/index.html"
  },
  "web_accessible_resources": []
}
